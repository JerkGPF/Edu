<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">

    <FrameLayout
        android:background="#ffffff"
        android:id="@+id/fraglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>
    </FrameLayout>

    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/rg_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rg_bottom_navigation_listen"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/image1"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:background="@mipmap/main_course_icon_selected"
                android:gravity="center" />

            <TextView
                android:textColor="@color/lessgreen"
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rg_bottom_navigation_think"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/image2"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:background="@mipmap/main_exercises_icon"
                android:gravity="center" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="练习"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rg_bottom_navigation_my"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/image3"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:background="@mipmap/main_my_icon"
                android:gravity="center" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>